<% order_by = 0 unless order_by %>
<% order = 'asc' unless order %>

<script type="text/javascript">
$(function() {
    $('.datatable').DataTable({
        "language": {"url": "/datatable-<%= I18n.locale %>.lang"},
        order: [[ '<%= order_by %>', '<%= order %>' ]],
        pageLength: 25,
        responsive: true
    });
});
</script>
