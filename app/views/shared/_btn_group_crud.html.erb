<div class="btn-group">
  <button data-toggle="dropdown" class="btn btn-primary btn-xs dropdown-toggle">Opções <span class="caret"></span></button>
  <ul class="dropdown-menu">
    <li>
      <%= link_to model do %>
        <i class="fa fa-eye"></i> <%= t('show') %>
      <% end %>
    </li>
      <li>
        <%= link_to path_edit do %>
          <i class="fa fa-pencil"></i> <%= t('edit') %>
        <% end %>
      </li>
      <li class="divider"></li>
      <li>
        <%= link_to model, method: :delete, data: { confirm: t('you_are_sure?') } do %>
          <i class="fa fa-trash"></i> <%= t('delete') %>
        <% end %>
      </li>
  </ul>
</div>