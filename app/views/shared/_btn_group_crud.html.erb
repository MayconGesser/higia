<% if can? :update, ability or can? :destroy, ability %>
  <div class="btn-group">
    <button data-toggle="dropdown" class="btn btn-primary btn-xs dropdown-toggle"><%= t('options') %> <span class="caret"></span></button>
    <ul class="dropdown-menu">
      <li>
        <%= link_to model do %>
          <i class="fa fa-eye"></i> <%= t('show') %>
        <% end %>
      </li>
      <% if can? :update, ability %>
        <li>
          <%= link_to path_edit do %>
            <i class="fa fa-pencil"></i> <%= t('edit') %>
          <% end %>
        </li>
      <% end %>
      <% if can? :destroy, ability %>
        <li class="divider"></li>
        <li>
          <%= link_to model, method: :delete, data: { confirm: t('you_are_sure?') } do %>
            <i class="fa fa-trash"></i> <%= t('delete') %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% else %>
  <%= link_to t('show'), model, class: 'btn btn-primary btn-xs' %>
<% end %>
