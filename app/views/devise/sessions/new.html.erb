<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>
      <h1 align="center" class="logo-name" style="margin-left: 15px;"><%= image_tag("logo.png", size: "200x120", alt: "Eurotec Nutrition") %></h1>
    </div>

    <h3 align="center" style="color: #55a64c; font-family: unset"><%= t('app_name') %></h3><br>

    <% flash.each do |key, value| %>
      <div align="center" id="flash" class="alert alert-danger" style="font-size: 15px"><%= value %></div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, class: "form-control", placeholder: "Digíte seu E-mail", autofocus: true %>
      </div>

      <br>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Digíte sua Senha" %>
      </div>

      <br>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label "Lembrar-me", :style => "color: white" %>
        </div>
      <% end -%>

      <br>

      <div class="actions">
        <%= f.submit "Login", :class => "btn btn-primary block full-width m-b" %>
      </div>
    <% end %>
    <%= link_to t('sign_up'), new_user_registration_path, class: "btn btn-default block full-width m-b" %>
    <%= link_to t('forgout_password'), new_user_password_path %>
  </div>
</div>
