<div class="ibox-content animated fadeInRightBig">
  <% @drugstore_medicines.each do |drugstore_medicine| %>
    <div class="col-lg-4">
      <div class="contact-box">
        <a class="row" href="profile.html">
          <div class="col-4">
            <div class="text-center">
              <%= image_tag(drugstore_medicine.medicine) %>
              <img alt="image" class="rounded-circle m-t-xs img-fluid" src="img/a2.jpg">
              <div class="m-t-xs font-bold">Graphics designer</div>
            </div>
          </div>
          <div class="col-8">
            <h3><strong><%= drugstore_medicine.medicine.name %></strong></h3>
            <h4><strong><%= drugstore_medicine.drugstore.name %></strong></h4>
            <address>
              <%= drugstore_medicine.drugstore.city %><br>
              <%= drugstore_medicine.drugstore.state %><br>
              <%= drugstore_medicine.drugstore.cep %><br>
              <abbr title="Phone">Telefone:</abbr> <%= drugstore_medicine.drugstore.phone %>
            </address>
          </div>
        </a>
      </div>
    </div>
  <% end %>
</div>
