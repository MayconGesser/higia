<table class="table table-striped table-bordered table-hover datatable">
  <thead>
    <tr>
      <th width="70%">Nome</th>
      <th width="30%">Hospital</th>
      <th width="1%"></th>
    </tr>
  </thead>
  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.hospital.name %></td>
        <td align="center">
          <%= render 'shared/btn_group_crud', model: doctor, path_edit: edit_doctor_path(doctor) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'shared/datatable', name: t('patients') %>