<h2>Editar Perfil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="col-md-3">
      <%= f.label 'Nome' %><br />
      <%= f.text_field :name, autofocus: true, class: 'form-control m-b' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", class: 'form-control m-b' %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <%= f.label 'Senha' %> <i><br>(Deixe em branco se não quiser trocar a senha)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      <% if @minimum_password_length %>
        mínimo <%= @minimum_password_length %> caracteres
      <% end %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-md-3">
      <%= f.label 'Confirmação de Senha' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control m-b' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= f.label 'Senha atual' %> <i><br>(Digíte sua senha para confirmar as alterações)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control m-b' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Atualizar", class: 'btn btn-primary' %>
  </div>
<% end %>

<hr>
<h3>Zona de Risco</h3>
<p>Descontente? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete, class: 'btn btn-danger' %></p>

<%= link_to "Voltar", :back %>