<table class="table table-striped table-bordered table-hover datatable">
  <thead>
    <tr>
      <th width="70%">Nome</th>
      <th width="30%">Telefone</th>
      <th width="1%"></th>
    </tr>
  </thead
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.phone %></td>
        <td align="center">
          <%= render 'shared/btn_group_crud', model: patient, path_edit: edit_patient_path(patient) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'shared/datatable', name: t('patients') %>