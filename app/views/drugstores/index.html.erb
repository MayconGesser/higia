<div class="ibox-content animated fadeInRightBig">
  <table class="table table-striped table-bordered table-hover datatable">
    <thead>
      <tr>
        <th width="70%">Nome</th>
        <th width="30%">Telefone</th>
        <th width="1%"></th>
      </tr>
    </thead>
    <tbody>
      <% @drugstores.each do |drugstore| %>
        <tr>
          <td><%= drugstore.name %></td>
          <td><%= drugstore.phone %></td>
          <td align="center">
            <%= render 'shared/btn_group_crud', model: drugstore, path_edit: edit_drugstore_path(drugstore) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render 'shared/datatable', name: t('drugstores') %>